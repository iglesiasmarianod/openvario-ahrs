#
# Makefile for eMPL Linux userland implementation
#

CC = gcc
CFLAGS = -Wall

# add -DI2C_DEBUG for debugging
DEFS = -DEMPL_TARGET_LINUX -DMPU9150 -DAK8975_SECONDARY

MPUDIR = mpu9150
EMPLDIR = ${MPUDIR}/eMPL
GLUEDIR = ${MPUDIR}/glue
SENSORCALDIR = sensord-deps


OBJS = inv_mpu.o \
       inv_mpu_dmp_motion_driver.o \
       linux_glue.o \
       mpu9150.o \
       quaternion.o \
       vector3d.o

OBJS_SENSORCAL = $(OBJS) 24c16.o ams5915.o

OBJS_SENSORD = $(OBJS) ms5611.o ams5915.o ads1110.o main.o nmea.o timer.o KalmanFilter1d.o cmdline_parser.o configfile_parser.o vario.o AirDensity.o 24c16.o

all : ahrsd imucal sensorcal sensord


ahrsd : $(OBJS) ahrsd.o
	$(CC) $(CFLAGS) $(OBJS) ahrsd.o -lm -o ahrsd

imucal : $(OBJS) imucal.o
	$(CC) $(CFLAGS) $(OBJS) imucal.o -lm -o imucal

sensorcal : $(OBJS_SENSORCAL) sensorcal.o
	$(CC) $(CFLAGS) $(OBJS_SENSORCAL) sensorcal.o -lrt -lm -o sensorcal
	
sensord : $(OBJS_SENSORD) sensord.o
	$(CC) $(CFLAGS) $(OBJS_SENSORD) sensord.o -lrt -lm -o sensord
	
ahrsd.o : ahrsd.c
	$(CC) $(CFLAGS) -I $(EMPLDIR) -I $(GLUEDIR) -I $(MPUDIR) $(DEFS) -c ahrsd.c
	
imucal.o : imucal.c
	$(CC) $(CFLAGS) -I $(EMPLDIR) -I $(GLUEDIR) -I $(MPUDIR) $(DEFS) -c imucal.c

## --------- TEMP SCAFFOLD -----------------

sensord.o: $(SENSORCALDIR)/sensord.c $(SENSORCALDIR)/def.h
	$(CC) $(CFLAGS) -I $(EMPLDIR) -I $(GLUEDIR) -I $(MPUDIR) -c $(SENSORCALDIR)/sensord.c


sensorcal.o: $(SENSORCALDIR)/sensorcal.c $(SENSORCALDIR)/def.h
	$(CC) $(CFLAGS) -I $(EMPLDIR) -I $(GLUEDIR) -I $(MPUDIR) -c $(SENSORCALDIR)/sensorcal.c

24c16.o : $(SENSORCALDIR)/24c16.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/24c16.c
	
ams5915.o : $(SENSORCALDIR)/ams5915.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/ams5915.c
	
ms5611.o : $(SENSORCALDIR)/ms5611.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/ms5611.c
	
ads1110.o : $(SENSORCALDIR)/ads1110.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/ads1110.c
	
main.o : $(SENSORCALDIR)/main.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/main.c
	
nmea.o : $(SENSORCALDIR)/nmea.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/nmea.c
	
timer.o : $(SENSORCALDIR)/timer.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/timer.c
	
KalmanFilter1d.o : $(SENSORCALDIR)/KalmanFilter1d.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/KalmanFilter1d.c
	
cmdline_parser.o : $(SENSORCALDIR)/cmdline_parser.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/cmdline_parser.c
	
configfile_parser.o : $(SENSORCALDIR)/configfile_parser.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/configfile_parser.c
	
vario.o : $(SENSORCALDIR)/vario.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/vario.c
	
AirDensity.o : $(SENSORCALDIR)/AirDensity.c
	$(CC) $(CFLAGS) $(DEFS) -c $(SENSORCALDIR)/AirDensity.c
	
## --------- END TEMP SCAFFOLD


mpu9150.o : $(MPUDIR)/mpu9150.c
	$(CC) $(CFLAGS) $(DEFS) -I $(EMPLDIR) -I $(GLUEDIR) -c $(MPUDIR)/mpu9150.c

quaternion.o : $(MPUDIR)/quaternion.c
	$(CC) $(CFLAGS) $(DEFS) -c $(MPUDIR)/quaternion.c

vector3d.o : $(MPUDIR)/vector3d.c
	$(CC) $(CFLAGS) $(DEFS) -c $(MPUDIR)/vector3d.c

linux_glue.o : $(GLUEDIR)/linux_glue.c
	$(CC) $(CFLAGS) $(DEFS) -I $(EMPLDIR) -I $(GLUEDIR) -c $(GLUEDIR)/linux_glue.c

inv_mpu_dmp_motion_driver.o : $(EMPLDIR)/inv_mpu_dmp_motion_driver.c
	$(CC) $(CFLAGS) $(DEFS) -I $(EMPLDIR) -I $(GLUEDIR) -c $(EMPLDIR)/inv_mpu_dmp_motion_driver.c

inv_mpu.o : $(EMPLDIR)/inv_mpu.c
	$(CC) $(CFLAGS) $(DEFS) -I $(EMPLDIR) -I $(GLUEDIR) -c $(EMPLDIR)/inv_mpu.c

clean:
	rm -f *.o

veryclean: clean
	rm -f ahrsd imucal sensorcal
